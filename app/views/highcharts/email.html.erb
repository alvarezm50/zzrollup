<%=  javascript_include_tag 'highcharts', 'chart_loading' %>

<%= render :partial => 'nav' %>

<table>
  <tr valign="top" id="charts-row"></tr>
</table>


<script type="text/javascript">

  var email_types = {
    'albumshared': 'Album Shared',
    'albumupdated': 'Album Updated',
    'likealbum': 'Album Liked',
    'photoliked': 'Photo Liked',
    'userliked': 'User Liked',
    'albumsharedlike': 'Album Shared Like',
    'contributorinvite': 'Contributor Invite',
    'photoshared': 'Photo Shared',
    'photosready': 'Photos Ready',
    'welcome': 'Welcome Email',
    'photocomment': 'Photo Comment'
  };

  var all_charts = {};

  $.each(email_types, function(email_type, title){
    var new_cell_html = "<td><div id=\""+email_type+"-charts\" class=\"chart-group\">";
    new_cell_html += "<h2>"+title+"</h2><br/>";
    new_cell_html += "<div><div id=\""+email_type+"_raw_statistics\" class=\"normal-chart-container\"/></div>";
    new_cell_html += "<div><div id=\""+email_type+"_full_perc_statistics\" class=\"normal-chart-container\"/></div>";
    new_cell_html += "<div><div id=\""+email_type+"_link_perc_breakdown\" class=\"normal-chart-container\"/></div>";
    new_cell_html += "</div></td>";
    $(new_cell_html).appendTo($("#charts-row"));

    all_charts[email_type+"_raw_statistics"] = {chart: null, url: 'email_breakdown/raw_stats.json?email_type='+email_type}
    all_charts[email_type+"_full_perc_statistics"] = {chart: null, url: 'email_breakdown/full_stats.json?email_type='+email_type}
    all_charts[email_type+"_link_perc_breakdown"] = {chart: null, url: 'email_breakdown/link_breakdown.json?email_type='+email_type}
  });

</script>

